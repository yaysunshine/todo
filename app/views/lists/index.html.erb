
<h1>New Todo</h1>
<div id="newtodoo">
<%= form_for :list, :url => lists_path(), :remote => true, :method => :post  do |f| %>
  <p id="new_todo_form">
    <%= f.label :item %><br>
    <%= f.text_field :item, class: "item_title" %>
  </p>
  <p id="add_new_todo_submit">
    <%= f.hidden_field :done, :value => false %>
    <%= f.submit("Add New Todo") %>
  </p>
<% end %>
</div>

<br><br>

<h2>All your todos</h2>
<div id="containter_all_todos">
  <% @todos.each do |todo| %>
    <ul>
      <li><%= todo.item %></li>
      <li><%= todo.id %></li>
      <li><%= todo.done %></li>
        <p id="donee">
          <%= hidden_field :done, :value => true %>
          <%= link_to("Done", list_path(todo.id), :done => true, :method => :put)%>
        </p>
    </ul>
  <% end %>
</div>
<br><br>

<p id="empty"><%= link_to 'New Todo', new_list_path %></p>

