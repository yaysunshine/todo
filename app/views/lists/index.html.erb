
<div class="col-md-4 col-md-offset-5">
  <h1>New Todo</h1>
  <div id="newtodoo">
  <%= form_for :list, :url => lists_path(), :method => :post  do |f| %>
    <p id="new_todo_form">
      <%= f.label :"What needs to be done?" %><br>
      <%= f.text_field :item, class: "item_title" %>
    </p>
    <p id="add_new_todo_submit">
      <%= f.hidden_field :done, :value => false %>
      <%= f.submit("Add New Todo") %>
    </p>
  <% end %>
  </div>
</div>
</div>

<h2 class="col-md-4 col-md-offset-5 text-left">All your todos</h2>
<div class="container_all_todos container col-md-4 col-md-offset-5">
  <% @todos.each do |todo| %>
    <ul class="col-sm-6">
      <li><%= todo.item %></li>
      <li><%= todo.done %></li>
        <p id="donee">
          <%= hidden_field :done, :value => true %>
          <%= link_to("Done", list_path(todo.id), :done => true, :method => :put)%>
        </p>
    </ul>
  <% end %>
</div>

