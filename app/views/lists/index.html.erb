<h1>New Todo</h1>
<%= form_for :list do |f| %>
  <p>
    <%= f.label :list %><br>
    <%= f.text_field :item %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p></p>
  <p></p>
  <p></p>
<% end %>

<h1>Todos</h1>
  <% @todos.each do |todo| %>
    <ul>
      <li><%= todo.item %></li>
    </ul>
  <% end %>

